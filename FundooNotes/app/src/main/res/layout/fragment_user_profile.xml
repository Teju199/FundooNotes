<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/userprofiledesign">

    <RelativeLayout

        android:id="@+id/centerline3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Account Information"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:layout_marginTop="30dp"
        android:gravity="center">

    </TextView>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_above="@+id/centerline3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="80dp"
        android:src="@drawable/profile">

    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/FullName"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_above="@+id/centerline3"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/textviewdesign"
        android:drawablePadding="10dp"
        android:paddingLeft="10dp"
        android:text="Full Name"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/heading_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/profile_image"
        android:layout_marginStart="60dp"
        android:layout_marginTop="-70dp"
        android:layout_marginEnd="30dp"
        android:text="Name"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:ignore="NotSibling">

    </TextView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_baseline_person_24"
        android:layout_alignBottom="@+id/profile_image"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="-33dp">

    </ImageView>



    <TextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/centerline3"
        android:layout_marginStart="30dp"
        android:drawablePadding="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/textviewdesign"
        android:textColor="@color/white"
        android:paddingLeft="10dp"
        android:text="Email Address"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/FullName"
        android:layout_marginTop="10dp"
        android:text="Email address"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginStart="65dp">

    </TextView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_baseline_email_24"
        android:layout_below="@+id/FullName"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp">

    </ImageView>


    <Button
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/centerline3"
        android:layout_marginHorizontal="100dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/buttondesign"
        android:text="Logout"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <Button
        android:id="@+id/changeProfileImage"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/centerline3"
        android:layout_marginHorizontal="100dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/buttondesign"
        android:text="CHANGE PROFILE"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/ic_baseline_arrow_back_24" />


</RelativeLayout>
